<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/textColorBlack2</item>
        <item name="android:textColorSecondary">@color/textColorBlack3</item>

        <!--   Toolbar Style and background colour     -->
        <item name="toolbarStyle">@style/AppTheme.ToolbarStyle</item>
        <item name="colorSurface">@color/colorPrimary</item>

        <!-- TabLayout Style -->
        <item name="tabStyle">@style/AppTabLayout</item>
    </style>

    <style name="AppTheme.ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">

        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/CustomSubTitleTextAppearance</item>
        <item name="titleTextColor">@color/textColorBlack2</item>
        <item name="subtitleTextColor">@color/textColorBlack3</item>

    </style>

    <style name="AppTabLayout" parent="Widget.MaterialComponents.TabLayout">

        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">@color/textColorWhite1</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/CustomSubTitleTextAppearance</item>
        <item name="tabTextColor">@color/textColorBlack2</item>
        <item name="tabIconTint">@color/textColorBlack2</item>

    </style>

    <style name="AlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog">


    </style>

    <style name="CustomTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/poppin_semibolditalic</item>


    </style>

    <style name="CustomSubTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/textColorBlack2</item>
    </style>

    <style name="TextStyleMedium" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/textColorBlack2</item>
        <item name="android:textColorHint">@color/textColorBlack3</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextStyleSmall" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/textColorBlack2</item>
        <item name="android:textColorHint">@color/textColorBlack3</item>
        <item name="textAllCaps">false</item>
    </style>




</resources>